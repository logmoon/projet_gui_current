<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="sidebar" prefHeight="600.0" prefWidth="200.0" styleClass="sidebar" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projet_gui.Controllers.SidebarController">
    <children>
        <Label styleClass="header-title" text="Farmer Assistant" textFill="WHITE">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
            <VBox.margin>
                <Insets bottom="20.0" top="10.0" />
            </VBox.margin>
        </Label>
        <Button mnemonicParsing="false" onAction="#navigateToDashboard" prefHeight="40.0" prefWidth="180.0" styleClass="sidebar-button" text="Dashboard" />
        <Button mnemonicParsing="false" onAction="#navigateToTasks" prefHeight="40.0" prefWidth="180.0" styleClass="sidebar-button" text="Tasks" />
        <Button mnemonicParsing="false" onAction="#navigateToFields" prefHeight="40.0" prefWidth="180.0" styleClass="sidebar-button" text="Fields" />
        <Button mnemonicParsing="false" onAction="#navigateToCrops" prefHeight="40.0" prefWidth="180.0" styleClass="sidebar-button" text="Crops" />
        <Button mnemonicParsing="false" onAction="#navigateToFieldCropAssociations" prefHeight="40.0" prefWidth="180.0" styleClass="sidebar-button" text="Field-Crop Associations" />
        <Button mnemonicParsing="false" onAction="#navigateToWeather" prefHeight="40.0" prefWidth="180.0" styleClass="sidebar-button" text="Weather" />
        <Button mnemonicParsing="false" onAction="#navigateToDiseases" prefHeight="40.0" prefWidth="180.0" styleClass="sidebar-button" text="Diseases" />
        <Button mnemonicParsing="false" onAction="#navigateToProfile" prefHeight="40.0" prefWidth="180.0" styleClass="sidebar-button" text="Profile" />
        <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
            <children>
                <Button mnemonicParsing="false" onAction="#logout" prefHeight="40.0" prefWidth="180.0" styleClass="sidebar-button" text="Logout" />
            </children>
            <padding>
                <Insets bottom="20.0" />
            </padding>
        </VBox>
    </children>
</VBox>